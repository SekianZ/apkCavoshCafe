<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivProducto_ItemHorizontal"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:padding="8dp"
        android:background="@drawable/sh_bg_item_light_silver"
        android:contentDescription="@string/content_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/ivButton"
        android:layout_width="42dp"
        android:layout_height="128dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/sh_bg_circle_carmine_pink"
        android:contentDescription="@string/content_description"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/ivPrecioHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="S/"
        android:textColor="@color/carmine_pink"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivButton"
        app:layout_constraintStart_toEndOf="@id/ivProducto_ItemHorizontal"/>

    <TextView
        android:id="@+id/tvPrecio_itemHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivMas_itemCarrito"
        app:layout_constraintEnd_toEndOf="@+id/ivMas_itemCarrito"/>

    <ImageView
        android:id="@+id/ivMas_itemCarrito"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/content_description"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_plus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/flesh"/>

    <ImageView
        android:id="@+id/ivMenos_itemCarrito"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/content_description"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/minus_svgrepo_com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/flesh"/>

</androidx.constraintlayout.widget.ConstraintLayout>