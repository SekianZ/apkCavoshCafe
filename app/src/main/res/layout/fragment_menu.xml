<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Menu">

    <!-- HEADER -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@drawable/sh_bg_header_police_blue"
        android:text="Menu"
        android:textColor="@color/flesh"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- BUSCADOR -->
    <SearchView
        android:id="@+id/svBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="-26dp"
        android:background="@drawable/sh_bg_btn_bright_gray"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivBuscar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/sh_bg_circle_carmine_pink"
        android:contentDescription="@string/content_description"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_buscar"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/svBuscar"
        app:layout_constraintBottom_toBottomOf="@id/svBuscar"
        app:layout_constraintEnd_toEndOf="@id/svBuscar" />

    <!-- CATEGORÍAS -->
    <TextView
        android:id="@+id/tvCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Categorías"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/svBuscar"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:id="@+id/hsvCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvCategorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- HOT DRINKS -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHotDrinks"
                    android:layout_width="136dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingStart="48dp"
                    android:background="@drawable/sh_bg_btn_carmine_pink"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Hot drinks"
                    android:textColor="@color/flesh"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivHotDrinks"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/sh_bg_circle_carmine_pink"
                    android:backgroundTint="@color/flesh"
                    android:contentDescription="@string/content_description"
                    android:padding="8dp"
                    android:src="@drawable/ice_drink"
                    app:tint="@color/carmine_pink" />
            </FrameLayout>

            <!-- COLD DRINKS -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvColdDrinks"
                    android:layout_width="136dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingStart="48dp"
                    android:background="@drawable/sh_bg_btn_bright_gray"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Cold drinks"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivColdDrinks"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/sh_bg_circle_carmine_pink"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/content_description"
                    android:padding="8dp"
                    android:src="@drawable/ice_drink"
                    app:tint="@color/police_blue" />
            </FrameLayout>

            <!-- SANDWICHES -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvSandwich"
                    android:layout_width="136dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingStart="48dp"
                    android:background="@drawable/sh_bg_btn_bright_gray"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Sandwiches"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivSandwich"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/sh_bg_circle_carmine_pink"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/content_description"
                    android:padding="8dp"
                    android:src="@drawable/bread"
                    app:tint="@color/police_blue" />
            </FrameLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- LISTA DE NOVEDADES -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMasNovedades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/hsvCategorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
